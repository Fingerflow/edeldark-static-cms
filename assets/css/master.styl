@import '_settings'
@import 'jeet'

//normalize()
base()

// fn
scale-i(ratio)
  -moz-transform scale(ratio) !important
  -webkit-transform scale(ratio) !important
  -o-transform scale(ratio) !important
  transform scale(ratio) !important	

// VAR
fxSettings = 2.5s linear 0s
navFx = .5s linear .1s
grey = #e2e2e2
greyDark = rgba(30,30,30,1)
universe()
  background url('../img/background.png') fixed
  background-size cover


// Fonts

@font-face
  font-family extraTerrestre
  src url('../fonts/picto_edeldark_3-webfont.eot')
  src url('../fonts/picto_edeldark_3-webfont.eot?#iefix') format('embedded-opentype'), url('../fonts/picto_edeldark_3-webfont.woff') format('woff'), url('../fonts/picto_edeldark_3-webfont.ttf') format('truetype'), url('../fonts/picto_edeldark_3-webfont.svg#untitled1medium') format('svg')
  font-weight normal
  font-style normal

.ufo
  font-family extraTerrestre

// LESS CSS


body
  overflow-x hidden
  padding 0
  margin 0
  background grey
  &.viewmore
    #global
      margin-top -30px
    #viewmore
      bottom 0
  &.show-menu
    #global
      margin-left 200px
    nav
      left 0

#global
  width 100%
  overflow visible
  position relative
  margin 20px
  transition margin navFx
  background grey
.project-container
  position relative

#viewmore
  position fixed
  display block
  width 100%
  bottom -30px
  left 0
  height 30px
  border none
  universe()
  cursor pointer
  transition bottom navFx
  button
    color white
    background none
    width 100%
    text-align center
    border 0


nav
  position fixed
  top 0
  left -200px
  height 100%
  width 180px
  z-index 2
  transition left navFx
  universe()
  #logo
    universe()
    position absolute
    width 67px
    height 63px
    z-index 12
    top 20px !important
    left 180px
    padding 10px
    padding-left 30px
    transition left navFx
    border-radius 0 10px 10px 0

  #logo-full
    position relative
    margin-bottom 20px
    display inline-block
  .menu-item
    display inline-block
    width 70px
    margin-left 10px
    margin-bottom 10px
  

.project
  display block
  overflow hidden
  width 0
  height 0
  z-index 1
  .puzzle
    position absolute
    //border 1px solid black
    border-radius 100%
    background-color white
    text-align center
    font-family extraTerrestre
    font-size 27px
    line-height 40px
    color transparent//grey
    cursor pointer
    //scale-i(1)
    -moz-transition border-radius fxSettings,color fxSettings, -moz-transform fxSettings
    -o-transition border-radius fxSettings, color fxSettings, -o-transform fxSettings
    -webkit-transition border-radius fxSettings, color fxSettings, -webkit-transform fxSettings
    transition border-radius fxSettings, color fxSettings, transform fxSettings
  &:hover
    .puzzle
      border 0
      border-radius 0
      color transparent
      scale-i(1)
      -moz-transition-duration .2s
      -o-transition-duration .2s
      -webkit-transition-duration .2s
      transition-duration .2s
      transition-timing-function ease-in

#project
  col(6/12, offset: 2/12)
  img
    width 100%
  .nav
    margin-top 30px
    text-align center
    a.nav-item
      width 30px
      display inline-block
      margin-right 20px
#related
  height 700px
  overflow scroll
  col(4/12)
  .project-container
    height 1000px
  #viewmore
    position absolute
    bottom 0

